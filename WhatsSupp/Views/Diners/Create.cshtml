@model WhatsSupp.ViewModels.DinerCuisineVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Diner</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Diner.FirstName" class="control-label"></label>
                <input asp-for="Diner.FirstName" class="form-control" />
                <span asp-validation-for="Diner.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Diner.LastName" class="control-label"></label>
                <input asp-for="Diner.LastName" class="form-control" />
                <span asp-validation-for="Diner.LastName" class="text-danger"></span>
            </div>
            @foreach(Cuisine cuisine in Model.Cuisines)
            {              
                <div>                    
                    <input checked="checked" id="@cuisine.Selected" name="@cuisine.CuisineName" type="checkbox" value="true" />
                    <span>@cuisine.CuisineName</span>
                </div> 
                              
            }
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
